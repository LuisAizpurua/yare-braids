---

import type { prices } from 'src/interface/braids.interface';
import InfoExtra from './InfoExtra.astro';
import IconAction from './IconAction.astro';

interface Props{
    id: number
    name: string
    price: prices[]
}

const {id, name, price} = Astro.props
---

<div class="flex flex-row p-5 bg-[#cbcbde] w-full">
    <h1 class="font-bold text-gray-700 hover:cursor-pointer animate-pulse">
    <a href={"/braid/" + id}>{name}</a>  
    </h1>
    <div class="flex-1"></div>
  {
    <div class="flex flex-row justify-center flex-wrap">
      <p id={`price-braid-${1}`} class="font-bold text-[#363636]">${price[0].total}</p>
           <IconAction id={id} price={price}/>
    </div>
  }
</div>
<InfoExtra id={id} price={price} />
