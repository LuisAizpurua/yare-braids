---
import InfoExtraTsx from "src/reactive/InfoExtra";
import IconAction from "./IconAction.astro";

export const prerender = false;

const { id, name, description, prices } = Astro.props;
---

<div id="parent-info" class="flex flex-row p-5 bg-[#cbcbde] w-full">
  <h1 class="font-bold text-gray-700 hover:cursor-pointer animate-pulse">
    <a href={"/braid/" + id}>{name}</a>
  </h1>
  <div class="flex-1"></div>

  <div class="flex flex-row justify-center flex-wrap">
    <p id={`price-braid-${1}`} class="font-bold text-[#363636]">
      ${prices[0].total}
    </p>
    <IconAction id={id}/>
    <!-- <IconActionTsx client:only="solid-js" id={id}/> -->
  </div>
</div>
<InfoExtraTsx
  client:only="solid-js"
  id={`info-add-${id}`}
  {prices}
  class="hidden w-full transition-transform text-left bg-[#cbcbde] duration-1000 ease-in-out"
/>
