---
import type { GetStaticPaths } from "astro";
import IndexStatic from "@components/page-static/IndexStatic.astro";
import NavStatic from "@components/page-static/NavStatic.astro";
import type { BraidsType } from "@interfaces/braidsPrices.interface";
import Layout from "@layout/Layout.astro";

export const prerender = true

export const getStaticPaths = (async () => {
    try{
      const dataResponse = (await import('@data/braids.data.json')).default

    return dataResponse.map(data =>{ 
      return  {
        params: { id: data.id},
        props: {data}
    }});
    } catch (error) {
        console.error("⚠️ Error en getStaticPaths:", error);
        return []; 
    }
}) satisfies GetStaticPaths;

const {id} = Astro.params;
const {data} = Astro.props
---

 <Layout id={id} data={data as BraidsType}>
    <IndexStatic data={data as BraidsType}/>
    <NavStatic name={data.name}/>
</Layout> 